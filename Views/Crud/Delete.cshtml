@model List<CrudOperation_HttpClient_.Models.GetRecordViewModel.GetRecordDataId>

@{
    ViewData["Title"] = "Delete";
}

<h5>Delete the Record</h5>
<hr />

<h4><b>Are you sure you want to delete this?</b></h4>

<br />
<div>
  
    <hr />
    @foreach(var item in Model)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => @item.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => @item.Id)
            </dd>

        </dl>
    }
    <br />
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Read">Back to List</a>
    </form>   
    
</div>
